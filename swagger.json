{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "NITs API",
    "description": "",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "Local server"
    }
  ],
  "paths": {
    "/api/nits": {
      "get": {
        "summary": "List all NITs",
        "tags": [
          "nits"
        ],
        "responses": {
          "200": {
            "description": "Retrieve nits successfull",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NITs"  
                }
              }
            }
          },
          "500": {
            "description": "Internal error"
          }
        }
      }
    },
    "/api/nits/{nit}": {
      "get": {
        "summary": "Get info for a specific NIT",
        "tags": [
          "nits"
        ],
        "parameters": [
          {
            "name": "nit",
            "in": "path",
            "required": true,
            "description": "NIT of user",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Retrieve nits successfull",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NIT"
                }
              }
            }
          },
          "500": {
            "description": "Internal error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "NIT": {
        "type": "object",
        "properties": {
          "nit": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "iva_afiliation": {
            "type": "string"
          },
          "status": {
            "type": "integer"
          },
          "inactivation": {
            "type": "string"
          },
          "tipo_personeria": {
            "type": "string"
          }
        }
      },
      "NITs": {
        "type":"array",
        "items": {
          "$ref":"#/components/schemas/NIT"
        }
      }
    }
  }
}